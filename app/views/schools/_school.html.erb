<div id="<%= dom_id school %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= school.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this school", school, class: "tw-btn-secondary" %>
    <%= link_to "Edit this school", edit_school_path(school), class: "tw-btn-secondary" %>
    <hr class="mt-6">
  <% end %>
</div>
